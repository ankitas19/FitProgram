<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".NewWorkFrag">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fitthree"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:src="@drawable/mc"
                android:layout_width="90dp"
                android:layout_height="70dp"/>
            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_marginLeft="12dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/fitthreetitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mountain Climbers x 2"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    />
                <TextView
                    android:layout_marginTop="4dp"
                    android:id="@+id/fitthreedesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="120 seconds"
                    android:textColor="#4C5067"
                    android:textSize="16sp"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fitfour"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:src="@drawable/leglift"
                android:layout_width="90dp"
                android:layout_height="70dp"/>
            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_marginLeft="12dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/fitfourtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Leg lifts x 2"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    />
                <TextView
                    android:layout_marginTop="4dp"
                    android:id="@+id/fitfourdesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="60 seconds"
                    android:textColor="#4C5067"
                    android:textSize="16sp"
                    />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</FrameLayout>